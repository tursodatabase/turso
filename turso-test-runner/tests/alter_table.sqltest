# Drop column
setup alter-table-drop-column {
    CREATE TABLE t (a, b);
    INSERT INTO t VALUES (1, 1), (2, 2), (3, 3);
}

@setup alter-table-drop-column
test alter-table-drop-column {
    SELECT * FROM t;
    ALTER TABLE t DROP b;
    SELECT sql FROM sqlite_schema;
    SELECT * FROM t;
}
expect {
    1|1
    2|2
    3|3
    CREATE TABLE t (a)
    1
    2
    3
}

