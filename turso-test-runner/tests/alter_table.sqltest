# ALTER TABLE Tests
# Ported from testing/alter_table.test

@database :memory:

# Rename table
setup alter-table-rename-table {
    CREATE TABLE t1 (x INTEGER PRIMARY KEY, u);
}

@setup alter-table-rename-table
test alter-table-rename-table {
    ALTER TABLE t1 RENAME TO t2;
    SELECT name FROM sqlite_schema WHERE type = 'table';
}
expect {
    t2
}

# Rename column
setup alter-table-rename-column {
    CREATE TABLE t (a INTEGER);
    CREATE INDEX i ON t (a);
}

@setup alter-table-rename-column
test alter-table-rename-column {
    ALTER TABLE t RENAME a TO b;
    SELECT sql FROM sqlite_schema;
}
expect {
    CREATE TABLE t (b INTEGER)
    CREATE INDEX i ON t (b)
}

# Rename column with quoted name
setup alter-table-rename-quoted-column {
    CREATE TABLE t (a INTEGER);
}

@setup alter-table-rename-quoted-column
test alter-table-rename-quoted-column {
    ALTER TABLE t RENAME a TO "ab cd";
    SELECT sql FROM sqlite_schema;
}
expect {
    CREATE TABLE t ("ab cd" INTEGER)
}

# Add column
setup alter-table-add-column {
    CREATE TABLE t (a);
    INSERT INTO t VALUES (1);
}

@setup alter-table-add-column
test alter-table-add-column {
    SELECT * FROM t;
    ALTER TABLE t ADD b;
    SELECT sql FROM sqlite_schema;
    SELECT * FROM t;
}
expect {
    1
    CREATE TABLE t (a, b)
    1|
}

# Add column with default
setup alter-table-add-column-typed {
    CREATE TABLE t (a);
}

@setup alter-table-add-column-typed
test alter-table-add-column-typed {
    ALTER TABLE t ADD b DEFAULT 0;
    SELECT sql FROM sqlite_schema;
    INSERT INTO t (a) VALUES (1);
    SELECT * FROM t;
}
expect {
    CREATE TABLE t (a, b DEFAULT 0)
    1|0
}

# Add multiple columns with defaults
setup alter-table-add-column-default {
    CREATE TABLE test (a);
    INSERT INTO test VALUES (1), (2), (3);
}

@setup alter-table-add-column-default
test alter-table-add-column-default {
    ALTER TABLE test ADD b DEFAULT 0.1;
    ALTER TABLE test ADD c DEFAULT 'hello';
    SELECT * FROM test;
    CREATE INDEX idx ON test (b);
    SELECT b, c FROM test WHERE b = 0.1;
    ALTER TABLE test DROP a;
    SELECT * FROM test;
}
expect {
    1|0.1|hello
    2|0.1|hello
    3|0.1|hello
    0.1|hello
    0.1|hello
    0.1|hello
    0.1|hello
    0.1|hello
    0.1|hello
}

# Add quoted column
setup alter-table-add-quoted-column {
