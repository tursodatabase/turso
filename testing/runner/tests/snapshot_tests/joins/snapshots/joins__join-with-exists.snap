---
source: joins.sqltest
expression: |-
  SELECT
          c.customer_id,
          c.name,
          c.city
      FROM
          customers c
      WHERE
          EXISTS (
              SELECT 1
              FROM orders o
              WHERE o.customer_id = c.customer_id
              AND o.total_amount > 1000
          );
info:
  statement_type: SELECT
  tables:
  - customers
  - orders
  setup_blocks:
  - schema
  database: ':memory:'
