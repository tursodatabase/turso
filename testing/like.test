    SELECT like('abcX%', 'abc', 'X') 
} 0
do_execsql_test like-fn-esc-4  { 
    SELECT like('abcX%', 'abcX%', 'X') 
} 0
do_execsql_test like-fn-esc-5  { 
    SELECT like('abcX%', 'abc%%', 'X') 
} 0

